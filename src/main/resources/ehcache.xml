<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core.xsd http://www.ehcache.org/v3 ">

    <cache alias="default">
        <expiry>
            <ttl unit="seconds">600</ttl>
        </expiry>
        <heap unit="entries">1000</heap>
    </cache>

    <!-- Cache definition for "authors" -->
    <cache alias="authors">
        <expiry>
            <ttl unit="seconds">300</ttl>
        </expiry>
        <heap unit="entries">1000</heap>
    </cache>

</config>